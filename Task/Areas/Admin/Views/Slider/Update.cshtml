@model Slide
@{
    ViewData["Title"] = "Update";
}

<div class="content-wrapper">
    <div class="row">

        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description">
                        Basic form layout
                    </p>

                    <form class="forms-sample" method="post">

                        <div class="form-group">
                            <label for="exampleInputUsername1">Image</label>
                            <input class="form-control" asp-for="Image" placeholder="Image">
                            <span asp-validation-for="Image"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Title</label>
                            <input class="form-control" asp-for="Title" placeholder="Name">
                            <span asp-validation-for="Title"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Offer</label>
                            <input class="form-control" asp-for="Offer" placeholder="Offer">
                            <span asp-validation-for="Offer"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Desciption</label>
                            <input class="form-control" asp-for="Description" placeholder="Desciption">
                            <span asp-validation-for="Description"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Update</button>
                        <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>


