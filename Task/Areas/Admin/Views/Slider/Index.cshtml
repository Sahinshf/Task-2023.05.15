@model IEnumerable<Slide>
@{
    ViewData["Title"] = "Slider Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">

        <div class="card-body">
            <h4 class="card-title">Slider Table</h4>
            <p class="card-description">
                Add class <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Offer </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/assets/images/website-images//@item.Image">
                                </td>
                                <td>@item.Title</td>
                                <td>@item.Offer</td>
                                <td>
                                <a class="btn btn-success" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                                <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a>

                                @if (ViewBag.Count == 1)
                                {
                                        <a class="btn btn-danger disabled" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                                }
                                else
                                {

                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                }
                                    </td>
                            </tr>
                        }


                    </tbody>
                </table>
                <a class="btn btn-primary" asp-action="Create">Create</a>
            </div>
        </div>

    </div>
</div>

